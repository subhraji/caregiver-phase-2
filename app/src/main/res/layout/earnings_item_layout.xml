<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/settings_item_background">
    <TextView
        android:id="@+id/received_from_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received from"
        android:textSize="12sp"
        android:textColor="@color/text_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/agency_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Test agency name"
        app:layout_constraintTop_toBottomOf="@+id/received_from_htv"
        app:layout_constraintStart_toStartOf="@+id/received_from_htv"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours ago"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/text_grey"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/received_from_htv"
        app:layout_constraintTop_toBottomOf="@+id/agency_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$200"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:tint="@color/text_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>