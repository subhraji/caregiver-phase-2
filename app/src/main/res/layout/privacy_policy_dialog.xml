<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/header_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Privacy Policy and Terms &amp; Conditions"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <WebView
        android:id="@+id/privacy_webview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/header_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/privacy_webview"
        app:layout_constraintStart_toStartOf="@+id/privacy_webview"
        app:layout_constraintEnd_toEndOf="@+id/privacy_webview"
        app:layout_constraintBottom_toBottomOf="@+id/privacy_webview"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/privacy_webview"
        app:layout_constraintStart_toStartOf="@+id/privacy_webview"
        app:layout_constraintEnd_toStartOf="@+id/check_agree"
        android:text="I Agree with the Privacy Policy and Terms &amp; Conditons."
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/check_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:text="Agree"
        android:background="@drawable/agree_btn_bg"
        android:textColor="@color/white"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_1"/>
</androidx.constraintlayout.widget.ConstraintLayout>