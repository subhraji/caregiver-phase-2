<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/agency_logo_img_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@color/dash_yellow"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/agency_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home care agency"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/agency_logo_img_view"
            app:layout_constraintStart_toEndOf="@+id/agency_logo_img_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/job_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/agency_name_tv"
            app:layout_constraintStart_toStartOf="@+id/agency_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Urgently required for a caregiver for elderly patient"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"/>
        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/job_title_tv"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/person_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:layout_constraintStart_toStartOf="@+id/agency_logo_img_view"
            android:src="@drawable/ic_baseline_person_24"
            app:tint="@color/text_grey"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/care_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/person_img"
            app:layout_constraintStart_toEndOf="@+id/person_img"
            android:text="2 Senior"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/dot_img_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/care_type_tv"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintBottom_toBottomOf="@+id/care_type_tv"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/age_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintStart_toEndOf="@+id/dot_img_tv"
            app:layout_constraintEnd_toStartOf="@+id/reward_htv"
            android:text="Female: 60 yrs, Male: 70 yrs"
            android:textColor="@color/text_grey"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/reward_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            android:text="Rewards"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_marginEnd="10dp"/>
        <RelativeLayout
            android:id="@+id/start_img_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/reward_htv"
            app:layout_constraintStart_toStartOf="@+id/reward_htv"
            app:layout_constraintTop_toBottomOf="@+id/reward_htv">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_19"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/location_img_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_loction_18"
            app:tint="@color/text_grey"
            app:layout_constraintTop_toBottomOf="@+id/person_img"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/location_img_view"
            app:layout_constraintTop_toTopOf="@+id/location_img_view"
            android:text="San Francisco, California"
            android:textSize="11sp"
            android:textColor="@color/text_grey"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/dot_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/address_tv"
            app:layout_constraintTop_toTopOf="@+id/address_tv"
            app:layout_constraintBottom_toBottomOf="@+id/address_tv"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 Mils"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/address_tv"
            app:layout_constraintStart_toEndOf="@+id/dot_tv_2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/start_img_lay"/>
        <ImageView
            android:id="@+id/job_bag_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_anagcy_logo_18"
            app:tint="@color/text_grey"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/location_img_view"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            />
        <TextView
            android:id="@+id/date_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/text_grey"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/job_bag_img"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, Sept 13"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/date_htv"
            app:layout_constraintStart_toStartOf="@+id/date_htv"/>
        <TextView
            android:id="@+id/hour_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour"
            android:textColor="@color/text_grey"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/date_tv"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/hour_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8:00 AM - 12:00 PM"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/hour_htv"
            app:layout_constraintStart_toStartOf="@+id/hour_htv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            app:layout_constraintTop_toBottomOf="@+id/hour_tv"
            android:text="$80"
            android:textSize="18sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/time_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/price_tv"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"
            android:layout_marginStart="10dp"
            android:textSize="10sp"
            android:background="@drawable/time_left_bg"
            android:backgroundTint="@color/dash_yellow"
            android:text="TIME LEFT: 30 mins"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="1dp"/>
        <TextView
            android:id="@+id/accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Now"
            android:textSize="14sp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:drawableTint="@color/theme_blue"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>