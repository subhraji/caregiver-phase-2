<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    tools:context=".ui.activity.EarningsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_bank_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/theme_blue"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/back_btn_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    app:tint="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/bank_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_baseline_account_balance_24"
                    app:tint="@color/white"
                    android:layout_marginTop="200dp"/>
                <TextView
                    android:id="@+id/add_bank_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bank_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Add Bank Account"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/settings_item_background"
                    android:backgroundTint="#4A000000"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/active_bank_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bank_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Active Bank Account"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/settings_item_background"
                    android:backgroundTint="#4A000000"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="gone"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/warning_lay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/active_bank_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="20dp"
                    android:background="@drawable/warning_bg">
                    <ImageView
                        android:id="@+id/info_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_outline_info_24"
                        app:tint="#8C3D00"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#8C3D00"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/info_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Your payout account is not active yet. To active your account please press the Active Bank Account."/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/show_bank_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent">
                <FrameLayout
                        android:id="@+id/frame_lay_1"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="245dp"
                            android:background="@color/theme_blue"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/back_btn_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                                app:tint="@color/white"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:id="@+id/earnings_hrv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Earnings"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="@+id/back_btn_2"
                                app:layout_constraintBottom_toBottomOf="@id/back_btn_2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_centerHorizontal="true"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/bank_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@+id/earnings_card"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toBottomOf="@+id/back_btn_2"
                                android:background="@drawable/settings_item_background"
                                android:backgroundTint="#2C000000"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp">
                                <ImageView
                                    android:id="@+id/edit_bank_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_outline_edit_24"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="20dp"
                                    android:visibility="gone"/>
                                <LinearLayout
                                    android:id="@+id/bank_name_lay"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/three_dot"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="@color/light_white"
                                        android:text="Bank Name" />

                                    <TextView
                                        android:id="@+id/bank_name_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="no data"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"/>

                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/three_dot"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_three_dot"
                                    app:tint="@color/white"
                                    android:padding="10dp"
                                    android:layout_marginEnd="10dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>
                                <LinearLayout
                                    android:id="@+id/route_linear_lay"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintEnd_toStartOf="@+id/account_linear_lay"
                                    app:layout_constraintStart_toStartOf="@+id/bank_name_lay"
                                    app:layout_constraintTop_toBottomOf="@+id/bank_name_lay"
                                    android:layout_marginTop="15dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="@color/light_white"
                                        android:text="Routing Number" />
                                    <TextView
                                        android:id="@+id/route_no_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:textColor="@color/white"
                                        android:text="no data"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/account_linear_lay"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintStart_toEndOf="@+id/route_linear_lay"
                                    app:layout_constraintTop_toBottomOf="@+id/bank_name_lay"
                                    app:layout_constraintEnd_toStartOf="@+id/edit_bank_btn"
                                    android:layout_marginTop="15dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="@color/light_white"
                                        android:text="Account Number" />
                                    <TextView
                                        android:id="@+id/account_no_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:textColor="@color/white"
                                        android:text="no data"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/earnings_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_alignParentBottom="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:cardBackgroundColor="@color/dash_yellow"
                                app:cardCornerRadius="7dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:paddingStart="10dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_centerVertical="true">
                                        <TextView
                                            android:id="@+id/total_earning_htv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total Earnings"
                                            android:textColor="@color/white"
                                            android:textSize="10sp"/>
                                        <TextView
                                            android:id="@+id/earning_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="20sp"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:text="$2600.00"/>
                                    </LinearLayout>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="10dp"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="@color/white">
                                        <Spinner
                                            android:id="@+id/month_spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"/>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/earnings_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_lay_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:listitem="@layout/earnings_item_layout"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>