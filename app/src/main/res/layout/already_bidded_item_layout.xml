<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="10dp"
    android:id="@+id/root_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_lay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/color_grey"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/agency_logo_img_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/agency_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:textSize="11sp"
                app:layout_constraintTop_toTopOf="@+id/agency_logo_img_view"
                app:layout_constraintStart_toEndOf="@+id/agency_logo_img_view"
                app:layout_constraintBottom_toTopOf="@+id/job_title_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/job_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/agency_name_tv"
                app:layout_constraintStart_toStartOf="@+id/agency_name_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/agency_logo_img_view"
                android:textSize="15sp"
                android:text="Urgently required a caregiver for elderly patient"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/person_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toBottomOf="@+id/cons_lay_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_outline_person_24"
            app:tint="@color/text_grey"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/care_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/person_img"
            app:layout_constraintStart_toEndOf="@+id/person_img"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/dot_img_tv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/bullet_point_bg"
            app:layout_constraintStart_toEndOf="@+id/care_type_tv"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintBottom_toBottomOf="@+id/care_type_tv"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/age_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintStart_toEndOf="@+id/dot_img_tv"
            app:layout_constraintEnd_toStartOf="@+id/reward_htv"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/reward_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            android:text="Rewards"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_grey"/>
        <RelativeLayout
            android:id="@+id/start_img_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/reward_htv"
            app:layout_constraintStart_toStartOf="@+id/reward_htv"
            app:layout_constraintTop_toBottomOf="@+id/reward_htv">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/location_img_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/home_pin"
            app:tint="@color/text_grey"
            app:layout_constraintTop_toBottomOf="@+id/person_img"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/start_img_lay"
            app:layout_constraintStart_toEndOf="@+id/location_img_view"
            app:layout_constraintTop_toTopOf="@+id/location_img_view"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/job_bag_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/calendar_month"
            app:tint="@color/text_grey"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/address_tv"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            />
        <TextView
            android:id="@+id/date_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/job_bag_img"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/clock_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:tint="@color/text_grey"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/date_htv"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/hour_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/clock_icon"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            app:layout_constraintTop_toBottomOf="@+id/hour_htv"
            android:textSize="19sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/time_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/price_tv"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/time_left_bg"
            android:backgroundTint="@color/dash_yellow"
            android:text="TIME LEFT: 00:00"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            />

        <TextView
            android:id="@+id/job_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Now"
            android:textSize="15sp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:drawablePadding="4dp"
            app:layout_constraintEnd_toStartOf="@+id/right_arrow"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"/>

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>