<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="10dp"
    android:id="@+id/root_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/agency_logo_img_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@color/color_grey"
            />
        <TextView
            android:id="@+id/agency_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="@+id/agency_logo_img_view"
            app:layout_constraintStart_toEndOf="@+id/agency_logo_img_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/job_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/agency_name_tv"
            app:layout_constraintStart_toStartOf="@+id/agency_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"/>
        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/job_title_tv"
            android:background="#E4E4E4"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/person_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:layout_constraintStart_toStartOf="@+id/agency_logo_img_view"
            android:src="@drawable/ic_baseline_person_24"
            app:tint="@color/text_grey"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/care_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/person_img"
            app:layout_constraintStart_toEndOf="@+id/person_img"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:id="@+id/dot_img_tv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/bullet_point_bg"
            app:layout_constraintStart_toEndOf="@+id/care_type_tv"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintBottom_toBottomOf="@+id/care_type_tv"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/age_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            app:layout_constraintStart_toEndOf="@+id/dot_img_tv"
            app:layout_constraintEnd_toStartOf="@+id/reward_htv"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/reward_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_type_tv"
            android:text="Rewards"
            android:textSize="12sp"
            android:textColor="@color/text_grey"
            android:layout_marginEnd="10dp"/>
        <RelativeLayout
            android:id="@+id/start_img_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/reward_htv"
            app:layout_constraintStart_toStartOf="@+id/reward_htv"
            app:layout_constraintTop_toBottomOf="@+id/reward_htv">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/location_img_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_loction_18"
            app:tint="@color/text_grey"
            app:layout_constraintTop_toBottomOf="@+id/person_img"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/start_img_lay"
            app:layout_constraintStart_toEndOf="@+id/location_img_view"
            app:layout_constraintTop_toTopOf="@+id/location_img_view"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/job_bag_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_anagcy_logo_18"
            app:tint="@color/text_grey"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/address_tv"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            />
        <TextView
            android:id="@+id/date_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/job_bag_img"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/clock_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:tint="@color/text_grey"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/date_htv"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/hour_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/job_bag_img"
            app:layout_constraintStart_toEndOf="@+id/clock_icon"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/person_img"
            app:layout_constraintTop_toBottomOf="@+id/hour_htv"
            android:textSize="18sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/><TextView
            android:id="@+id/accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Now"
            android:textSize="14sp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:drawableTint="@color/theme_blue"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/price_tv"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>