<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:layout_margin="10dp"
    android:background="@drawable/border_background_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/edu_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_school_24"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/institute_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/edu_img"
        app:layout_constraintTop_toTopOf="@+id/edu_img"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="dwbbjd wqf dfe"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/course_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="jhvsav"
        app:layout_constraintTop_toBottomOf="@+id/institute_name_tv"
        app:layout_constraintStart_toStartOf="@+id/institute_name_tv"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2007-2009"
        app:layout_constraintTop_toBottomOf="@+id/course_name_tv"
        app:layout_constraintStart_toStartOf="@+id/institute_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintTop_toTopOf="@+id/edu_img"
        android:src="@drawable/ic_outline_edit_24"
        android:layout_marginEnd="15dp"
        app:tint="@color/black"/>
    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edu_img"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:tint="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>