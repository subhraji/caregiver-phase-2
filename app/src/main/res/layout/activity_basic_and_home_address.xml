<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.BasicAndHomeAddressActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/back_btn"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Caregiver Profile Registration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/relative_lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="70dp">

                <LinearLayout
                    android:id="@+id/mandatory_stepper_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_one" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dots" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_two" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dots" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_three" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/mandatory_stepper_lay"
                    app:layout_constraintStart_toStartOf="@+id/mandatory_stepper_lay"
                    app:layout_constraintEnd_toEndOf="@+id/mandatory_stepper_lay">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/color_grey" />

                        <ImageView
                            android:id="@+id/image_add_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_outline_camera_alt_24" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/text_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alexa Brown"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColorHint="@color/text_grey"
                        app:boxBackgroundColor="@color/transparent"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/text_grey"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_number_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_grey_1"
                            android:textCursorDrawable="@null"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/text_grey"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColorHint="@color/text_grey"
                            app:boxBackgroundColor="@color/transparent"
                            android:background="@color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeColor="@color/text_grey"
                            app:boxStrokeWidthFocused="0dp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                                    android:drawableTint="@color/text_grey"
                                    android:hint="Date of Birth"
                                    android:inputType="text"
                                    android:maxLength="10"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark_grey_1"
                                    android:textCursorDrawable="@null"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="visible"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:background="@color/text_grey"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColorHint="@color/text_grey"
                            app:boxBackgroundColor="@color/transparent"
                            android:background="@color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeColor="@color/text_grey"
                            app:boxStrokeWidthFocused="0dp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                                    android:drawableTint="@color/text_grey"
                                    android:hint="Gender"
                                    android:inputType="text"
                                    android:maxLength="10"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark_grey_1"
                                    android:textCursorDrawable="@null"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="visible"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:background="@color/text_grey"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColorHint="@color/text_grey"
                        app:boxBackgroundColor="@color/transparent"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/text_grey"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ssn_number_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="SSN Number"
                            android:inputType="number"
                            android:maxLength="9"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_grey_1"
                            android:textCursorDrawable="@null"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/text_grey"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/street_txt_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColorHint="@color/text_grey"
                        app:boxBackgroundColor="@color/transparent"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/text_grey"
                        app:boxStrokeWidthFocused="0dp"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/street_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:drawableEnd="@drawable/ic_gps_19"
                            android:hint="Street number, Name"
                            android:inputType="text"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_grey_1"
                            android:textCursorDrawable="@null"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/text_grey"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/next_card_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:background="@color/color_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_grey">
                <TextView
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Step"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blue"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/theme_blue"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/next_btn"
                    android:layout_marginStart="5dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_lay_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="70dp">

                <LinearLayout
                    android:id="@+id/optional_stepper_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/stepper_done_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dot_green" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_two" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dots" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_three" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/optional_stepper_lay"
                    app:layout_constraintStart_toStartOf="@+id/optional_stepper_lay"
                    app:layout_constraintEnd_toEndOf="@+id/optional_stepper_lay">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColorHint="@color/text_grey"
                        app:boxBackgroundColor="@color/transparent"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/text_grey"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="Job Type"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                            android:textColorHint="@color/dark_grey_1"
                            android:textCursorDrawable="@null"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/text_grey"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColorHint="@color/text_grey"
                        app:boxBackgroundColor="@color/transparent"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/text_grey"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="Caregiver experience (years)"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_grey_1"
                            android:textCursorDrawable="@null"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/text_grey"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/next_card_btn_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:background="@color/color_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_grey">
                <TextView
                    android:id="@+id/next_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Step"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blue"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/theme_blue"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/next_btn_2"
                    android:layout_marginStart="5dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_lay_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="70dp">

                <LinearLayout
                    android:id="@+id/doc_stepper_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/stepper_done_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dot_green" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/stepper_done_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/reg_dot_green" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reg_icon_three" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/doc_stepper_lay"
                    app:layout_constraintStart_toStartOf="@+id/doc_stepper_lay"
                    app:layout_constraintEnd_toEndOf="@+id/doc_stepper_lay">
                    <RelativeLayout
                        android:id="@+id/tuber_relay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/doc_upload_grey_bg">
                        <TextView
                            android:id="@+id/tuber_htv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuberculosis test result"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/tuber_htv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(2 step skin test or quantiFERON-TB Gold)"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_below="@+id/tuber_htv"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tuber_recycler_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tuber_htv_2"
                            android:layout_margin="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/tuber_htv_2"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@+id/tuber_recycler_view"
                            android:background="@drawable/upload_doc_btn_bg"
                            app:tint="@color/black"
                            android:padding="30dp"
                            android:src="@drawable/ic_baseline_cloud_upload_24"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/criminal_bg_relay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/doc_upload_grey_bg">
                        <TextView
                            android:id="@+id/criminal_bg_htv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Criminal background results"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/criminal_bg_recycler_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/criminal_bg_htv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/criminal_bg_htv"
                            android:layout_marginTop="20dp"
