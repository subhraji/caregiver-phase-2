<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/add_review_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Add Review"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_review_htv"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/review_txt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/rating_bar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_background_1"
                android:hint="Type your feedback here..."
                android:maxLength="200"
                android:paddingStart="20dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/blue_btn_bg"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/review_txt"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>