<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FlagListActivity">
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />
    <TextView
        android:id="@+id/strike_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flag"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/back_arrow"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/back_arrow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/support_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/back_arrow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_outline_question_mark_24"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flag_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_arrow"
        android:layout_marginTop="20dp" />
</RelativeLayout>