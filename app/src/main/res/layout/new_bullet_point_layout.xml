<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">
    <ImageView
        android:id="@+id/bullet_point_img"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/bullet_point_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CNA Trained"
        app:layout_constraintTop_toTopOf="@+id/bullet_point_img"
        app:layout_constraintStart_toEndOf="@+id/bullet_point_img"
        app:layout_constraintBottom_toBottomOf="@+id/bullet_point_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>