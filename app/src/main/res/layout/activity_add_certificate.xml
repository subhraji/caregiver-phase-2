<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddCertificateActivity">
    <TextView
        android:id="@+id/education_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate/Course"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/clear_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/education_htv"
        app:layout_constraintBottom_toBottomOf="@+id/education_htv"
        android:layout_marginEnd="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/certificate_name_txt_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/text_grey"
        app:boxBackgroundColor="@color/transparent"
        android:background="@color/transparent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeColor="@color/white"
        app:helperTextTextColor="@color/error_red"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@+id/education_htv"
        app:layout_constraintStart_toStartOf="@+id/education_htv"
        app:layout_constraintEnd_toEndOf="@+id/clear_btn"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/certificate_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="Certificate/Course"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="visible"
        android:background="@color/color_grey"
        app:layout_constraintStart_toStartOf="@+id/certificate_name_txt_lay"
        app:layout_constraintEnd_toEndOf="@+id/certificate_name_txt_lay"
        app:layout_constraintTop_toBottomOf="@+id/certificate_name_txt_lay"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/start_year_txt_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/text_grey"
        app:boxBackgroundColor="@color/transparent"
        android:background="@color/transparent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeColor="@color/white"
        app:helperTextTextColor="@color/error_red"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        app:layout_constraintStart_toStartOf="@+id/view_1"
        app:layout_constraintEnd_toStartOf="@+id/end_year_txt_lay"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/start_year_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="Start year"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:id="@+id/view_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="visible"
        android:background="@color/color_grey"
        app:layout_constraintStart_toStartOf="@+id/start_year_txt_lay"
        app:layout_constraintEnd_toEndOf="@+id/start_year_txt_lay"
        app:layout_constraintTop_toBottomOf="@+id/start_year_txt_lay"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/end_year_txt_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/text_grey"
        app:boxBackgroundColor="@color/transparent"
        android:background="@color/transparent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeColor="@color/white"
        app:helperTextTextColor="@color/error_red"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        app:layout_constraintEnd_toEndOf="@+id/clear_btn"
        app:layout_constraintStart_toEndOf="@+id/start_year_txt_lay"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/end_year_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="End year"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:id="@+id/view_4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="visible"
        android:background="@color/color_grey"
        app:layout_constraintStart_toStartOf="@+id/end_year_txt_lay"
        app:layout_constraintEnd_toEndOf="@+id/end_year_txt_lay"
        app:layout_constraintTop_toBottomOf="@+id/end_year_txt_lay"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/theme_blue"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Certificate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>