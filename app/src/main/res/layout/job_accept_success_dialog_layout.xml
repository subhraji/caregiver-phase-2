<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:id="@+id/job_accept_dialog">
    <ImageView
        android:id="@+id/clear_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:tint="@color/black"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ja_dialog_done_img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_rawRes="@raw/done"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/clear_btn"/>

    <TextView
        android:id="@+id/ja_dialog_great_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great!"
        app:layout_constraintTop_toBottomOf="@+id/ja_dialog_done_img"
        app:layout_constraintStart_toStartOf="@+id/ja_dialog_done_img"
        app:layout_constraintEnd_toEndOf="@+id/ja_dialog_done_img"
        android:layout_marginTop="0dp"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for accepting the job"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ja_dialog_great_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>