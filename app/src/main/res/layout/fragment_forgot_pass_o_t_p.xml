<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ForgotPassOTPFragment">
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/new_logo_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/header_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo_img"
        app:layout_constraintStart_toStartOf="@+id/logo_img"
        app:layout_constraintEnd_toEndOf="@+id/logo_img"
        android:layout_marginTop="20dp"
        android:text="Enter the 6 digits OTP sent to your email"
        android:textSize="15sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/otp_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header_txt_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/ed_txt1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ed_txt2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ed_txt3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ed_txt4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ed_txt5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ed_txt6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:background="@drawable/otp_bg"/>
    </LinearLayout>

    <TextView
        android:id="@+id/timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otp_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/resend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otp_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="Resend"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/verify_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/timer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>